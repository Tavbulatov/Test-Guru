<%= form_with model: [:admin, @question, @answer] do |form| %>
  <%= render 'shared/errors', resource: @answer%>
  <p>
    <%= form.label :body %>
    <%= form.text_area :body, rows: 7, cols: 60 %>
  </p>

  <p>
    <%= form.label :correct %>
    <%= form.check_box :correct %>
  </p>
    <div class="d-grid gap-2 d-md-block">
      <button class="btn btn-light" type="button"><%= form.submit class: 'btn btn-light' %></button>
      <button class="btn btn-light" type="button"> <%= link_to t('nav.back'), admin_question_path(@answer.question), class: 'btn btn-light'%>
</button>
    </div>
<% end %>
