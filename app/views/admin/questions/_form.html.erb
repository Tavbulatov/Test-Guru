<h1><%= question_header(@question)%></h1>
<%= render 'shared/errors', resource: @question%>

<%= form_with model: [:admin, @test, @question] do |form| %>
<p>
<%= form.label :body %><br>
<%= form.text_field :body %>
</p>
<div class="d-grid gap-2 d-md-block">
  <button class="btn btn-light" type="button"><%= form.submit class: 'btn btn-light' %></button>
  <button class="btn btn-light" type="button"><%= link_to t('nav.back'), admin_test_path(@question.test), class: 'btn btn-light'%></button>
</div><br>
<%end%>
