
<%= render 'shared/errors', resource: @badge%>

<%= form_with model: [:admin, @badge], local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :rule %><br>
    <%= form.text_field :rule, in: 1..3 %>
  </p>

  <p>
    <%= form.label :rule_criterion %><br>
    <%= form.text_field :rule_criterion %>
  </p>

  <p>
    <%= form.label :url_picture %><br>
    <%= form.text_field :url_picture %>
  </p>

    <p>
    <%= form.label :description %><br>
    <%= form.text_area :description, size: "70x10" %>
  </p>

  <div class="d-grid gap-2 d-md-block">
    <button class="btn btn-light" type="button"><%= form.submit class: 'btn btn-light' %></button>
    <button class="btn btn-light" type="button"><%= link_to t('nav.back'), admin_tests_path, class: 'btn btn-light'%></button>
  </div><br>
<%end%>
